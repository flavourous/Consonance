<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns:l="clr-namespace:Consonance.XamarinFormsView.PCL;assembly=Consonance.XamarinFormsView.PCL"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Consonance.XamarinFormsView.PCL.EntryLineVM_Row">
	<ContentView.Resources>
		<ResourceDictionary>
			<l:KVPListConverter x:Key="klc"/>
      <l:TimeConverter x:Key="tc"/>
		</ResourceDictionary>
	</ContentView.Resources>
	<StackLayout Orientation="Horizontal" BackgroundColor="Red">
		<Label Text="{Binding start, Converter={StaticResource tc}}" VerticalOptions="Center" HorizontalOptions="FillAndExpand" BackgroundColor="Blue"/>
		<StackLayout Orientation="Vertical" VerticalOptions="Center" BackgroundColor="Green">
			<Label Text="{Binding name}" BackgroundColor="Teal"/>
			<Label Text="{Binding desc}" BackgroundColor="Purple"/>
		</StackLayout>
		<Label FontAttributes="Italic" Text="{Binding displayAmounts, Converter={StaticResource klc}}" HorizontalOptions="FillAndExpand" VerticalOptions="Center" BackgroundColor="Yellow"/>
	</StackLayout>
</ContentView>