<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:l="clr-namespace:Consonance.XamarinFormsView.PCL;assembly=Consonance.XamarinFormsView.PCL" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.PCL.RecurrsEveryPatternValueRequest">
	<ContentView.Resources>
		<ResourceDictionary>
			<l:RecurrsEveryPatternValueRequestConverter x:Name="convy" x:Key="rConverter"/>
		</ResourceDictionary>
	</ContentView.Resources>
  <Grid x:Name="mg">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
		<Entry x:Name="en" Text="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=freq}" Keyboard="Numeric"/>
		<l:PickerIval Grid.Column="1" SelectedIndex="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=type}" x:Name="picky"/>
  </Grid>
</ContentView>
