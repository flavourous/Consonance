<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns:l="clr-namespace:Consonance.XamarinFormsView;assembly=Consonance.XamarinFormsView" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.InfoSelectRequest">
<ContentView.Resources>
	<ResourceDictionary>
		<l:SValConverter x:Key="svc"/>
	</ResourceDictionary>
</ContentView.Resources>
<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
<Label Text="{Binding name}"/>
<Label Text="{Binding value, Converter={StaticResource svc}" HorizontalOptions="FillAndExpand" VerticalOptions="Center" x:Name="lblInfo"/>
<Button Text="Choose" VerticalOptions="Center" Clicked="OnChoose"/>
</StackLayout>
</ContentView>
