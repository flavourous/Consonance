<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:l="clr-namespace:Consonance.XamarinFormsView;assembly=Consonance.XamarinFormsView" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.RecurrsEveryPatternValueRequest">
	<ContentView.Resources>
		<ResourceDictionary>
			<l:RecurrsEveryPatternValueRequestConverter x:Key="rConverter"/>
		</ResourceDictionary>
	</ContentView.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Entry Grid.Column="0" Text="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=freq}" Keyboard="Numeric"/>
		<Picker Grid.Column="1" SelectedIndex="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=type}" x:Name="picky"/>
		<Label Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center">@</Label>
		<DatePicker Grid.Column="3" Date="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=date}"/>
	</Grid>
</ContentView>
