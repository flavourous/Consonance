<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:l="clr-namespace:Consonance.XamarinFormsView;assembly=Consonance.XamarinFormsView" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.RecurrsEveryPatternValueRequest">
	<ContentView.Resources>
		<ResourceDictionary>
			<l:RecurrsEveryPatternValueRequestConverter x:Name="convy" x:Key="rConverter"/>
		</ResourceDictionary>
	</ContentView.Resources>
	<l:StackLayoutIval x:Name="sl" Orientation="Horizontal">
		<Entry x:Name="en" Text="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=freq}" Keyboard="Numeric"/>
		<l:PickerIval SelectedIndex="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=type}" x:Name="picky"/>
		<Label YAlign="Center">@</Label>
		<DatePicker Format="dd/MM/yyyy" Date="{Binding value, Converter={StaticResource rConverter}, ConverterParameter=date}"/>
	</l:StackLayoutIval>
</ContentView>
