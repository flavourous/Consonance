<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:l="clr-namespace:Consonance.XamarinFormsView;assembly=Consonance.XamarinFormsView" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.InfoLineVM_Row">
	<ContentView.Resources>
		<ResourceDictionary>
			<l:KVPListConverter x:Key="klc"/>
		</ResourceDictionary>
	</ContentView.Resources>
	<StackLayout Orientation="Horizontal">
		<Label Text="{Binding name}" HorizontalOptions="StartAndExpand"/>
		<Label Text="{Binding displayAmounts, Converter={StaticResource klc}}" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
		<Grid>
			<Label IsVisible="{Binding selected}" HorizontalOptions="Center" VerticalOptions="Center" Text="Choose" />
			<Button Clicked="OnChosen" x:Name="cb" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="30" />
		</Grid>
	</StackLayout>
</ContentView>
