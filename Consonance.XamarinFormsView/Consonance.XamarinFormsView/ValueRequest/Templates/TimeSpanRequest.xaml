<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns:l="clr-namespace:Consonance.XamarinFormsView;assembly=Consonance.XamarinFormsView" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Consonance.XamarinFormsView.TimeSpanRequest">
	<StackLayout Orientation="Horizontal">
		<StackLayout.Resources>
			<ResourceDictionary>
				<l:TimeSpanValueConverter_Stateful x:Key="tsrConverter"/>
			</ResourceDictionary>
		</StackLayout.Resources>
		<Label Text="{Binding name}"/>
		<Entry Text="{Binding value, Converter={StaticResource tsrConverter}, ConverterParameter=h}" HorizontalOptions="StartAndExpand"/>
		<Entry Text="{Binding value, Converter={StaticResource tsrConverter}, ConverterParameter=m}" HorizontalOptions="StartAndExpand"/>
		<Entry Text="{Binding value, Converter={StaticResource tsrConverter}, ConverterParameter=s}" HorizontalOptions="StartAndExpand"/>
	</StackLayout>
</ContentView>
